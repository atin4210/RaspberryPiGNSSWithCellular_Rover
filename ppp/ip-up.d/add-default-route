#!/bin/sh
# Install a single PPP default route as fallback behind Wi-Fi.
# Wi-Fi default route + metric should be managed by NetworkManager/DHCP.

METRIC=200

# Remove any existing PPP defaults to avoid duplicates
ip route del default dev "$PPP_IFACE" 2>/dev/null || true
ip route del default dev "$PPP_IFACE" metric 60 2>/dev/null || true
ip route del default dev "$PPP_IFACE" metric 200 2>/dev/null || true

# Add/replace the controlled PPP fallback default
ip route replace default dev "$PPP_IFACE" metric "$METRIC"
